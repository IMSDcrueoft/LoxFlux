fun createPoint(x,y){
    fun pointerFuc(funName){
        if(funName == "x"){
            return x;
        } else if(funName == "y"){
            return y;
        }
    }

    return pointerFuc;
}

fun stress() {
    //change gc limit
    @system.gcNext(1024 * 1024 * 256);

    var count = 1e6;
    while (count > 0) {
        createPoint(count, count)("x");
        count = count - 1;
    }

    print "do full gc";
    @system.gc(); // do full gc
}

stress();